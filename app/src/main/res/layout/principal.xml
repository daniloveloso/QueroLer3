<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.develop.daniloveloso.queroler.Principal">

    <Button
        android:id="@+id/lidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClickLidos"
        android:text="Livros Cadastrados"
        android:textSize="30sp" />

    <Button
        android:id="@+id/pler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cadastrolivro"
        android:layout_centerHorizontal="true"
        android:onClick="onClickLer"
        android:text="CrÃ©ditos"
        android:textSize="30sp" />

    <Button
        android:id="@+id/cadastrolivro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lidos"
        android:layout_centerHorizontal="true"
        android:onClick="onClickCadastro"
        android:text="Cadastrar Livro"
        android:textSize="30sp" />
</RelativeLayout>
